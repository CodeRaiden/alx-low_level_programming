 #include "main.h"

 /**
  * _puts_recursion(char *s); - prints a string, followed by a new line
  * @s: pointer to the string address to print
  *
  * Return: Nothing
  */
 
 void _puts_recursion(char *s)
 {
   if (*s != '\0')
   {
       _putchar(*s);
       s++;
       _puts_recursion(s);
   }
   putchar('\n');
 }

